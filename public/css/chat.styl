*
  margin: 0
  padding: 0
  box-sizing: border-box
body
  font: 13px Helvetica, Arial
form
  background: #000
  padding: 3px
  position: fixed
  bottom: 0
  width: 100%
  div
    display:block
    *
      vertical-align:top
      border: none
      padding: 10px
      height:33px
    input, textarea
      width: 90%
      margin-right: .5%
      text-align:left
      resize: none
      //height:22px
    button
      width: 9%
      background: rgb(130, 224, 255)
#messages
  list-style-type: none
  margin: 0
  padding: 0
#messages li
  padding: 5px 10px
  white-space:pre-wrap
  unicode-bidi: embed
  text-align:left
#messages li:nth-child(odd)
  background: #eee
